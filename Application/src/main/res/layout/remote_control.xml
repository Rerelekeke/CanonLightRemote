<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Device Address"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/connection_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/disconnected"
            android:textColor="#eb403c"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="100dp"
                android:padding="30dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_shutterLayout"
                    app:layout_constraintWidth_percent="0.8"
                    >



                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button android:id="@+id/btn_shutter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/center_btn_shutter_photo"
                            android:onClick="shutterClick"/>

                        <ImageView

                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/shutter_click" />
                    </FrameLayout>



                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"

                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintWidth_percent="0.9"

                 >

                <FrameLayout android:layout_width="120dp"
                    android:layout_height="120dp">
                    <Button android:id="@+id/btn_headset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headset_choose_button"
                        android:onClick="headsetClick"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/headset_logo" />
                </FrameLayout>



                <FrameLayout android:layout_width="120dp"
                    android:layout_height="120dp">
                    <Button android:id="@+id/volumeButtons_choose_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headset_choose_button"
                        android:onClick="shutterClick"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/volume_buttons_logo" />
                </FrameLayout>

                <FrameLayout android:layout_width="120dp"
                    android:layout_height="120dp">
                    <Button android:id="@+id/headset_choose_button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/headset_choose_button"
                        android:onClick="shutterClick"/>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vibrate_logo" />
                </FrameLayout>

                </LinearLayout>




        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>

</RelativeLayout>